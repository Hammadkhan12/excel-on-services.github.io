                                <li>@Html.ActionLink("Services", "Service", "Home")</li>
                                <li>@Html.ActionLink("Career", "Create", "ApplyOnlines")</li>
                                <li>@Html.ActionLink("Contact Us", "Create", "Contacts")</li>
                            </ul>
                        </div>

                    </div>
                </div>
