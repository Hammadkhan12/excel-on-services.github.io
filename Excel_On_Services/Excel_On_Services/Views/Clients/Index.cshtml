@model IEnumerable<Excel_On_Services.Models.Client>

@{
    ViewBag.Title = "Index";
}
@{
    ViewBag.Title = "clints";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="site-wrap">
    @*=====Section start======*@

    <section class="site-section bg-light" id="contact-section" style="background-image: url(); background-repeat:no-repeat">
        <div class="container" style="margin-top:65px">
            <div class="row mb-5">
                <div class="col-12 text-center">
                    <h1 style="color:red; font-size:35px; font-style:inherit; font-family:cursive"><b> Client </b></h1>
                    <h4 style="color:lightskyblue; font-family:'Comic Sans MS'"><b> Details</b></h4>
                </div>
            </div>
            <p style="text-align:right">
                @using (Html.BeginForm("Index", "Clients", FormMethod.Get))
                {
                    <b style="color:black">Search By:</b>
                    @Html.RadioButton("searchBy", "Name") <text><b style="color:red; font-family:Arial">Name</b></text>
                    @Html.RadioButton("searchBy", "Email") <text><b style="color:red; font-family:Arial">Email</b></text>
                    @Html.RadioButton("searchBy", "Service") <text><b style="color:red; font-family:Arial">Service</b></text>
                    @Html.RadioButton("searchBy", "Plan") <text><b style="color:red; font-family:Arial">Plan</b></text>
                    <br />
                    @Html.TextBox("search")<input type="submit" value="Search" class="btn-danger" style="border:groove" />
                }
            </p>
            <table class="table" border="1">
                <tr style="background-color:black; color:white;border:2px solid  #3e5559">
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Contact)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Service)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Plan)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Contact)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Service)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Plan)
                        </td>
                    </tr>
                }

            </table>
        </div>
    </section>
</div><!-- Site rap-->
