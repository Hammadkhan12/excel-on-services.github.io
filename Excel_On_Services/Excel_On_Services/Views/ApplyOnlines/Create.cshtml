@model Excel_On_Services.Models.ApplyOnline

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
    @*=====Section Start=========*@
    <section class="site-section bg-light" id="contact-section" style="background-image: url(); background-repeat:no-repeat">
        <div class="container" style="margin-top:65px">
            <div class="row mb-5">
                <div class="col-12 text-center">
                    <h1 style="color:red; font-size:30px; font-style:normal; font-family:cursive;"><b> Apply Online</b></h1>
                    <h4 style="color:lightskyblue; font-family:'Comic Sans MS'; font-size:20px"><b> Submit Your INFO</b></h4>
                </div>
            </div>
            <center>
                <div class="row" style="align-content:center">
                    <div class="col-md-6 mb-6">
                        @using (Html.BeginForm("Create", "ApplyOnlines", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-horizontal">

                                @*Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
                                @if (ViewBag.Message != null)
                                {
                                    <span>
                                        @ViewBag.Message
                                    </span>
                                }

                                <div class="form-group">
                                    @Html.LabelFor(model => model.First_Name, "First Name", htmlAttributes: new { @class = "control-label", @style = "color:red; font-weight:bold; font-size:larger" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.First_Name, new { htmlAttributes = new { @class = "form-control", @style = "border-radius:5px!important;" } })
                                        @Html.ValidationMessageFor(model => model.First_Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Last_Name, "Last Name", htmlAttributes: new { @class = "control-label", @style = "color:red; font-weight:bold; font-size:larger" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.Last_Name, new { htmlAttributes = new { @class = "form-control", @style = "border-radius:5px!important;" } })
                                        @Html.ValidationMessageFor(model => model.Last_Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.N_I_C, "N-I-C", htmlAttributes: new { @class = "control-label", @style = "color:red; font-weight:bold; font-size:larger" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.N_I_C, new { htmlAttributes = new { @class = "form-control", @style = "border-radius:5px!important;" } })
                                        @Html.ValidationMessageFor(model => model.N_I_C, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Contact, "Contact No", htmlAttributes: new { @class = "control-label", @style = "color:red; font-weight:bold; font-size:larger" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.Contact, new { htmlAttributes = new { @class = "form-control", @style = "border-radius:5px!important;" } })
                                        @Html.ValidationMessageFor(model => model.Contact, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Gender, "Gender", htmlAttributes: new { @class = "control-label ", @style = "color:red; font-weight:bold; font-size:larger" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.Gender, new { htmlAttributes = new { @class = "form-control", @style = "border-radius:5px!important;" } })
                                        @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Email, "E-Mail", htmlAttributes: new { @class = "control-label ", @style = "color:red; font-weight:bold; font-size:larger" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @style = "border-radius:5px!important;" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <span style="color:red; font-weight:bold; font-size:larger"> Select CV </span>
                                    <div class="col-md-8">
                                        <input type="file" name="file" />
                                        @Html.ValidationMessage("CustomError")
                                    </div>
                                </div>

                            </div>
                            <div class="form-group" style="align-content:center">
                                <center><input type="submit" value="Submit" class="btn btn-danger" style="border:groove" /></center>
                            </div>
                        }
                    </div>
                    <div class="col-md-5">

                        <div class="d-flex">
                            <img src="~/images/aman.png" alt="" class="img-fluid" style="margin-top:3px; width:900px">
                        </div>

                    </div>
                </div>
            </center>
        </div>
    </section>

    @*=====Section End=========*@
</div><!--- Site Wrap --->
@*=====Footer End=========*@
